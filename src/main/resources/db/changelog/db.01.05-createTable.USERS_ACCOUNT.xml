<databaseChangeLog  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet author="kray1@list.ru" id="taskuser.createTable.USERS_ACCOUNT">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="TASKUSER" tableName="USERS_ACCOUNT" />
            </not>
        </preConditions>
        <createTable schemaName="TASKUSER" tableName="USERS_ACCOUNT">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="LOGIN" type="VARCHAR(64)" >
                <constraints nullable="false" />
            </column>
            <column name="PASSWORD" type="VARCHAR(128)" >
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="kray1@list.ru" id="taskuser.createSequence.USERS_ACCOUNT_SEQ">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists schemaName="TASKUSER" sequenceName="USERS_ACCOUNT_SEQ" />
            </not>
        </preConditions>
        <createSequence schemaName="TASKUSER" sequenceName="USERS_ACCOUNT_SEQ" startValue="1" incrementBy="2" />
    </changeSet>

    <changeSet author="kray1@list.ru" id="taskuser.createIndex.USERS_ACCOUNT_LOGIN_UC_IX">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists schemaName="TASKUSER" tableName="USERS_ACCOUNT" indexName="USERS_ACCOUNT_LOGIN_UC_IX" />
            </not>
        </preConditions>
        <createIndex tableName="USERS_ACCOUNT" schemaName="TASKUSER" indexName="USERS_ACCOUNT_LOGIN_UC_IX" unique="true">
            <column name="LOGIN" />
        </createIndex>
    </changeSet>

</databaseChangeLog>